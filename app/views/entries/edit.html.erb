<h3>Edit entry</h3>
<hr>
<% if @entry.errors.any? %>
	<ul>
	<% @entry.errors.full_messages.each do |error_message| %>
		<li><%= error_message %></li>
		<% end %>
	</ul>
	<hr>
<% end %>
<%= form_for @entry do |f| %>
	<div>
		<%= f.number_field :hours, placeholder:"How many hours?" %>
	</div><br>
	<div>
		<%= f.number_field :minutes, placeholder:"How many minutes?" %>
	</div><br>
	<div>
		<%= f.date_field :data %>
	</div><br>
	<div>
		<%= f.text_area :comments, placeholder:"Insert a comment" %>
	</div><br>
	<%= f.submit "Change my time!" %>
	<button><%= link_to("Back to Entries", project_entries_path(@entry.project_id) ) %></button>
<%end%>
<hr>

<h1>create a new project</h1>
<hr>
<% if @project.errors.any? %>
	<ul>
	<% @project.errors.full_messages.each do |error_message| %>
		<li><%= error_message %></li>
		<% end %>
	</ul>
	<hr>
<% end %>

<%= form_for @project do |f| %>
	<div>
		<%= f.label :title %>
		<%= f.text_field :title, placeholder:"write here a title" %>
	</div><br>
	<div>
		<%= f.label :priority %>
		<%= f.number_field :priority %>
	</div><br>
	<div>
		<%= f.label :description %>
		<%= f.text_area :description, placeholder:"description of the project" %>
	</div><br>
	<div>
		<%= f.submit "Create a project" %>
		<button><a href="http://localhost:3000/projects">Back to project list</a></button>
	</div>
<%end%>
